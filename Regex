function isIP(value) {  
const ipPattern = 
/^(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])(\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])){3}$/;  
return ipPattern.test(value);  
}  
console.log(isIP('192.168.0.1'));  
console.log(isIP('255.255.255.255'));  
console.log(isIP('999.999.999.999'));  
  
