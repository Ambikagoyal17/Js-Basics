function trimString(str) {  
return str.replace(/^\s+|\s+$/g, ');  
}  
console.log(trimString('  Hello World  '));  
console.log(trimString('\t\tTrim\t\n\n'));  
console.log(trimString('NoExtraSpaces'));  
console.log(trimString('  Trim with spaces  '));  
  
