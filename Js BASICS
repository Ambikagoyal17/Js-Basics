// Celsius to Fahrenheit
let celsius = 60;
let fahrenheit = (celsius * 9/5) + 32;
console.log(celsius + "째C is " + fahrenheit + " 째F");

// Fahrenheit to Celsius
fahrenheit = 45;
celsius = (fahrenheit - 32) * 5/9;
console.log(fahrenheit + "째F is " + celsius + "째C");

